  <style>
    body {
      margin: 0;
      font-family: Arial, sans-serif;
      background: linear-gradient(135deg, pink 40%, red 100%);
    }

    header {
      background-color: #f8f9fa;
      padding: 10px 20px;
      border-bottom: 4px solid #d81b60;
      box-shadow: 0 1px 0 #b71c1c;
    }

    .header-container {
      display: flex;
      align-items: center;
      justify-content: space-between;
    }

    .header-logo {
      display: flex;
      align-items: center;
    }

    .header-logo img {
      height: 70px;
      margin-right: 10px;
      margin-bottom: 13px;
    }

    .header-logo h1 {
      font-family: 'Quantico', sans-serif;
    }

    .header-logo .trade {
      color: black;
      animation: colorChangeTrade .5s forwards;
    }

    .header-logo .sphere {
      color: black;
      animation: colorChangeSphere .5s forwards;
      animation-delay: .5s;
    }

    nav {
      margin-left: auto; /* Pushes the nav menu to the right */
    }

    nav ul {
      list-style: none;
      margin: 0;
      padding: 0;
      display: flex;
      align-items: center;
    }

    nav ul li {
      margin-left: 20px;
    }

    nav ul li a {
      text-decoration: none;
      color: #007bff;
      font-size: 1em;
    }

    nav ul li a:hover {
      text-decoration: underline;
    }

    .setup-portfolio-container {
      padding: 20px;
      max-width: 600px;
      margin: 50px auto;
      background-color: #fff;
      border-radius: 10px;
      box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }

    h1 {
      font-family: 'Quantico', sans-serif;
      color: #d81b60;
      text-align: center;
    }

    form {
      display: flex;
      flex-direction: column;
      gap: 20px;
    }

    label {
      font-family: 'General Sans', sans-serif;
      font-weight: 700;
      color: #333;
    }

    input, select {
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 5px;
      font-family: 'General Sans', sans-serif;
      font-size: 16px;
    }

    button {
      padding: 10px;
      background-color: #d81b60;
      color: white;
      border: none;
      border-radius: 5px;
      font-family: 'Clash Display', sans-serif;
      font-size: 18px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    button:hover {
      background-color: #b71c1c;
    }
  </style>
